let mapleader = "," "<space> is equally valid
set relativenumber
set number
set ignorecase
set smartcase
set nowrap
set wrapscan
set laststatus=0
set ruler         " show the cursor position all the time
set showcmd       " display incomplete commands
set incsearch     " do incremental searching
set laststatus=2  " Always display the status line
set autowrite     " Automatically :write before running commands
set virtualedit=all " Move the cursor all over the screen

set ttimeoutlen=50 " Make typing faster
set pastetoggle=<F11> " Use <F11> to toggle between 'paste' and 'nopaste'
set list listchars=tab:»·,trail:·,nbsp:·
"
nmap <C-h> <C-w>h
nmap <C-j> <C-w>j
nmap <C-j> <C-w>k
nmap <C-l> <C-w>l

vnoremap gc :xccmd commentAndUncommentCurrentLines<CR>
nnoremap gc :xccmd commentAndUncommentCurrentLines<CR>
